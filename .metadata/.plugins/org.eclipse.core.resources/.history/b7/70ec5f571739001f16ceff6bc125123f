package test1;

public class Test11 {
	// 필드: 학생 이름과 국어, 영어, 수학 점수
    private String name;
    private double korean;
    private double english;
    private double math;

    // 생성자: 학생 이름과 점수를 초기화
    public Grade(String name, double korean, double english, double math) {
        this.name = name;
        this.korean = korean;
        this.english = english;
        this.math = math;
    }

    // 평균 점수를 구하는 메소드
    public double getAverage() {
        return (korean + english + math) / 3;
    }

    // 학생 이름과 평균 점수를 출력하는 메소드
    public void printGrade() {
        System.out.printf("%s의 평균 점수: %.2f\n", name, getAverage());
    }
}

public class Main {
    public static void main(String[] args) {
        // 두 개의 Grade 객체 생성
        Grade student1 = new Grade("강백호", 90.0, 85.5, 70.0);
        Grade student2 = new Grade("채치수", 82.0, 92.0, 60.5);

        // 각 객체의 평균 점수를 출력
        student1.printGrade();
        student2.printGrade();
    }
}
	

}
